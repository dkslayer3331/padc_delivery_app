<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OnboardScreenTwo">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:textColor="@color/pinkColor"
        android:text="Login"
        android:padding="16dp"/>

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliderView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:sliderIndicatorEnabled="true"
        app:sliderIndicatorSelectedColor="@color/pinkColor"
        app:sliderIndicatorGravity="center_horizontal|bottom"
        android:layout_below="@id/tvLogin"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Delivery.Button"
        android:layout_above="@id/btnFacebookSignIn"
        android:layout_margin="16dp"
        android:text="Create Account"/>

    <Button
        android:id="@+id/btnFacebookSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.Delivery.Button.Grey"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:text="Continue With Facebook"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>